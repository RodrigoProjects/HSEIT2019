        </div>
    </div>  
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.CuidadorDetalhes, htmlAttributes: new { @class = "control-label col-md-5 h4" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CuidadorDetalhes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CuidadorDetalhes, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.IRS, htmlAttributes: new { @class = "control-label col-md-5 h4" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IRS, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IRS, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />

    <button class="btn btn-outline-success">Guardar</button>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-outline-info" })
</div>