@model CuidadosContinuados.Models.Referenciacao

@{
    ViewBag.Title = "Edit";
}

<h2>Preencher</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Cuidador, htmlAttributes: new { @class = "control-label col-md-5 h4" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Cuidador, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cuidador, "", new { @class = "text-danger" })
