@model CuidadosContinuados.Models.DeleteModel

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<h3>Quer mesmo apagar esta Referenciação?</h3>
<div>
    <br />
    <div>

        <hr />
        <h4> <i class="fas fa-signature" style="color:cornflowerblue"></i> @Html.DisplayFor(model => model.utente.Name)</h4>
        <br />


        <p><span class="badge badge-secondary"><i class="fas fa-map-marker-alt"></i></span> @Html.DisplayFor(model => model.utente.Morada)</p>
        <p><span class="badge badge-secondary"><i class="fas fa-mobile-alt"></i></span> @Html.DisplayFor(model => model.utente.NumeroTelefone)</p>
    </div>
</div>

<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        @Html.ActionLink("Back to List", "Index",null ,new {@class="btn btn-outline-info" })
    </div>
}
    
