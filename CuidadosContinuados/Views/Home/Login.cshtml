
@{
    ViewBag.Title = "View";
}

<link href="~/Static/Login.css" rel="stylesheet" />
<form method="post">
    <div class="login-container align-middle">
        <div class="align-middle">
            <div class="col-6 login-form-1 align-middle">
                <h3>Login</h3>

                <div class="form-group col-md-12 align-middle ">
                    <input name="username" type="text" class="form-control" placeholder="Username" asp-for="username" />
                </div>
                <div class="form-group col-md-12 align-middle">
                    <input name="password" type="password" class="form-control" placeholder="Password" asp-for="password" />
                </div>
                <div class="form-group col-md-12 align-middle">
                    <input type="submit" class="btnSubmit" value="Login" />
                </div>

            </div>
        </div>
    </div>
</form>